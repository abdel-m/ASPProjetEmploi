@model EmploiASP.Contrat

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Contrat</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.dateEntree, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input id="dateEntree" class="form-control" type="date">
                @Html.ValidationMessageFor(model => model.dateEntree, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.dateEntree, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.dateEntree, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.dateEntree, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.idTravailleur, "idTravailleur", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("idTravailleur", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idTravailleur, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(model => model.ContratTravailleurSoumis, "Soumis", htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.DropDownList("NomEntreprise",.ToArray().Select(e=>e.TraductionEntreprise.First().tradTexteEntreprise), null, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.dateSortie, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input id="dateSortie" class="form-control" type="date">
                @Html.ValidationMessageFor(model => model.dateSortie, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.codeAlphabetique, "codeAlphabetique", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("codeAlphabetique", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.codeAlphabetique, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
